  body
    .container
      .row
        .col-md-4
        .col-md-4
          h1 Please register
          br
          form.form-signin(method='post', action='/register', id='registerForm', style='')
            .form-group
              label(for='email') Email Address
              input(class='form-control', id='email', type='text', name='email', placeholder='Enter your email', required)
